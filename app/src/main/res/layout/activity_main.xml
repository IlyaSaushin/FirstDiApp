<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/choose_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/whom_to_show"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/cat_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/cat_button"
        app:layout_constraintTop_toBottomOf="@id/choose_textView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        />

    <Button
        android:id="@+id/dog_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/dog_button"
        app:layout_constraintTop_toBottomOf="@id/choose_textView"
        app:layout_constraintStart_toEndOf="@id/cat_button"
        android:layout_marginStart="50dp"
        android:layout_marginTop="80dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>